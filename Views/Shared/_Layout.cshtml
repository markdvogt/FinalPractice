<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FinalPractice</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <style>
    /*////// NavBar CSS //////*/
        nav {
            list-style-type: none;
            margin: 0;
            padding: 0;
            overflow: hidden;
            background-color: darkslategrey;
            width: auto;
            border-radius: 10px;
        }

        a {
            float: left;
        }

        a {
            display: block;
            color: white;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
        }

            a:hover {
                background-color: #111;
            }
    /*///////////////////////*/

    /*/////// MY CSS ////////*/
        body {
            background-color: #c8d8e4;
            font-family: Helvetica, Arial, sans-serif, Courier, monospace
        }

        h1 {
            text-align: center;
        }

        p {
            font-size: 18pt;
            text-align: center;
            border-style: solid;
            border-radius: 10px;
        }

        ol {
            text-align: center;
            list-style-position: inside;
        }

        h3 {
            text-align: center;
        }

        h2 {
            text-align: center;
        }

        form {
            display: inline-block;
        }

        .form-center {
            display: flex;
            justify-content: center;
        }

        label {
            display: inline-block;
            width: 150px;
            text-align: right;
            font-size: 20px;
        }

        .buttonHolder {
            text-align: center;
        }

        fieldset {
            border: solid 2px black;
            float: left;
            background-color: blanchedalmond
        }

        img {
            display: block;
            margin-left: auto;
            margin-right: auto;
        }

        div.ex1 {
            width: 500px;
            margin: auto;
        }

        input {
            border-radius: 5px;
        }

        a {
            text-align: center;
            color: black
        }

        .target {
            color: black;
            text-align: center;
        }
    /*///////////////////////*/

    </style>



</head>
<body>
    <!--NAV BAR-->
    <nav>
        <a asp-controller="Home" asp-action="Index">Home</a>
        <a asp-controller="Home" asp-action="Form">Form</a>
        <a asp-controller="Home" asp-action="DataTable">Table</a>
    </nav>
    <br />

    <div>
        @RenderBody()
    </div>
</body>
</html>
