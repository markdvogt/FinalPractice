@{
    ViewData["Title"] = "Form";
}

@model FinalPractice.Models.FormResponse

<h2>Form Page</h2>
<div class="form-center">
    <form method="post">
        <fieldset style="border-radius: 10px;">

            <div asp-validation-summary="All" OnValidSubmit="Save"></div> <!--Makes it so validation pops up-->

            <label for="title" asp-for="Title">Title</label>
            <input type="text" id="title" asp-for="Title"><br><br>

            <label for="year" asp-for="Year">Year</label>
            <input type="number" id="year" asp-for="Year"><br><br>

            <label for="director" asp-for="Director">Director</label>
            <input type="text" id="director" asp-for="Director"><br><br>

            <label for="rating" asp-for="Rating">Rating</label>
            <select id="rating" asp-for="Rating">
                <!--Include a dropdown menu for rating-->
                <option value="G">G</option>
                <option value="PG">PG</option>
                <option value="PG-13">PG-13</option>
                <option value="R">R</option>
            </select><br><br>

            <label for="edit" asp-for="Edit">Edited</label>
            <select id="edit" asp-for="Edit">
                <option value="Yes">Yes</option>
                <option value="No">No</option>
            </select><br><br>

            <label for="lent" asp-for="Lent">Lent To</label>
            <input type="text" id="lent" asp-for="Lent"><br><br>

            <label for="notes" asp-for="Notes">Notes</label>
            <textarea id="notes" maxlength="25" asp-for="Notes">
            </textarea><br><br>

            <div class="buttonHolder">
                <input value="Submit" type="submit" id="calculate">
            </div>

        </fieldset>
    </form>

</div>